# ---------------------------------------------------------------------------------------------------------------------
# Required
# ---------------------------------------------------------------------------------------------------------------------
variable "vpc_name" {
    description = "The name of the vpc (e.g. my-vpc).  The name tag will be set to this value."
}
variable "vpc_cidr" {
    description = "The CIDR of the VPC subnet."
}
# ---------------------------------------------------------------------------------------------------------------------
# Optional
# ---------------------------------------------------------------------------------------------------------------------
variable "region" {
    description = "The AWS region for the VPC."
    default = "us-west-2"
}
variable "env" {
    default = "dev"
}
